{
  "name": "noisemachines.io",
  "description": "Source code for https://noisemachines.io",
  "version": "0.0.1",
  "scripts": {
    "dev": "sapper dev",
    "build": "sapper build",
    "deploy": "yarn build && eb deploy",
    "export": "sapper export",
    "start": "npm run build && node __sapper__/build",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test:integration": "run-p --race dev cy:run",
    "test:unit": "ava",
    "saveArtPreviews": "yarn compileScripts && node compiledScripts/saveArtPreviews",
    "compileScripts": "rollup --config scripts/rollup.config.js --format cjs --input scripts/saveArtPreviews.js --file compiledScripts/saveArtPreviews.js",
    "color-hunt": "color-hunt > source/routes/art/colorHunt.json"
  },
  "dependencies": {
    "@noise-machines/pixel-matrix": "^0.0.4",
    "@rollup/plugin-json": "^4.0.2",
    "array-range": "^1.0.1",
    "axios": "^0.19.0",
    "canvas": "^2.6.1",
    "canvas-sketch": "^0.7.1",
    "canvas-sketch-util": "^1.10.0",
    "chroma-js": "^2.1.0",
    "chromotome": "^1.16.3",
    "color-hunt": "^0.0.1",
    "compression": "^1.7.1",
    "dotenv": "^8.2.0",
    "eases": "^1.0.8",
    "gl-matrix": "^3.3.0",
    "json-stringify-safe": "^5.0.1",
    "kebab-case": "^1.0.0",
    "lodash": "^4.17.15",
    "lodash.sortby": "^4.7.0",
    "luxon": "^1.21.2",
    "marchingsquares": "^1.3.3",
    "pkg-dir": "^4.2.0",
    "polka": "next",
    "popmotion": "^8.7.1",
    "query-string": "^6.9.0",
    "regl": "^1.4.2",
    "sharp": "^0.25.1",
    "sirv": "^0.4.0",
    "three": "^0.116.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@rollup/plugin-replace": "^2.2.0",
    "ava": "^2.4.0",
    "esm": "^3.2.25",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.12.0",
    "rollup-plugin-babel": "^4.0.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^5.0.1",
    "rollup-plugin-terser": "^4.0.4",
    "sapper": "^0.27.0",
    "standard": "^14.3.1",
    "svelte": "^3.0.0"
  },
  "ava": {
    "require": [
      "esm"
    ]
  }
}
